rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- AUTH HELPERS ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserEmail() {
      return request.auth.token.get('email', '').lower();
    }

    function isAdmin() {
      return isAuthenticated() && (
        getUserEmail() == 'shengliang.song.ai@gmail.com' ||
        getUserEmail() == 'shengliang.song@gmail.com'
      );
    }

    // --- IDENTITY REGISTRY (TKS) ---
    match /identities/{anchorId} {
      allow read: if true;
      
      // Allow creation if:
      // 1. User is authenticated
      // 2. anchorId is valid size (signetai.io:xxxx)
      // 3. The user sets themselves as the owner
      allow create: if isAuthenticated() 
                    && anchorId.size() >= 5 
                    && anchorId.size() <= 256 
                    && request.resource.data.ownerUid == request.auth.uid;
      
      // Allow update if:
      // 1. User is an Admin
      // 2. OR User is the verified owner (matching UID or matching lowercase Email)
      // 3. OR The document exists but has no ownerUid/Email (orphaned)
      allow update: if isAdmin() || (
        isAuthenticated() && (
          resource.data.get('ownerUid', '') == request.auth.uid ||
          resource.data.get('ownerEmail', '').lower() == getUserEmail() ||
          resource.data.get('ownerUid', '') == '' ||
          resource.data.get('ownerUid', '') == 'ANONYMOUS'
        ) && (
          request.resource.data.ownerUid == request.auth.uid
        )
      );
      
      allow delete: if isAdmin();
    }

    match /users/{userId} {
      allow read, write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }

    match /{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}