rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.get('email', '').lower() in [
               'shengliang.song.ai@gmail.com',
               'shengliang.song@gmail.com'
             ];
    }

    // Helper to safely get the current ownerUid from existing data
    function getExistingOwner() {
      return resource.data.get('ownerUid', 'ANONYMOUS');
    }

    // ----------------------------------------------------------------------
    // SIGNET IDENTITY REGISTRY (TKS)
    // ----------------------------------------------------------------------
    match /identities/{anchorId} {
      allow read: if true;
      
      // Allow creation of a new anchor for any authenticated user
      allow create: if anchorId.size() >= 10 && anchorId.size() <= 256 
                    && isAuthenticated() 
                    && request.resource.data.get('ownerUid', '') == request.auth.uid;
      
      // Allow update for:
      // 1. Admin users (overrides)
      // 2. The existing owner (by UID or Email for legacy compatibility)
      // 3. Any authenticated user if the identity is unclaimed
      allow update: if isAdmin() 
                    || (isAuthenticated() && (
                        getExistingOwner() == 'ANONYMOUS' || 
                        getExistingOwner() == null ||
                        getExistingOwner() == "" ||
                        getExistingOwner() == request.auth.uid ||
                        getExistingOwner().lower() == request.auth.token.get('email', 'NONE').lower()
                    ));
      
      allow delete: if isAdmin();
    }

    // ----------------------------------------------------------------------
    // USERS & PROFILE
    // ----------------------------------------------------------------------
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin(); 
      allow create: if isOwner(userId);
      allow update: if isAdmin() || isOwner(userId);
    }

    // ----------------------------------------------------------------------
    // Global Default (Strict)
    // ----------------------------------------------------------------------
    match /{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}