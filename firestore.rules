rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      // PRIMARY DEFENSE: Admin status is now physically tied to the architect's verified email.
      return isAuthenticated() && request.auth.token.email == 'shengliang.song.ai@gmail.com';
    }

    // ----------------------------------------------------------------------
    // SIGNET IDENTITY REGISTRY (TKS)
    // ----------------------------------------------------------------------
    match /identities/{anchorId} {
      allow read: if true;
      
      // HARDENED: Only allow creation of high-entropy anchors.
      // Adjusted minimum to 10 to allow for shorter usernames like 'signetai.io:joe'.
      allow create: if !exists(/databases/$(database)/documents/identities/$(anchorId))
                    && anchorId.size() >= 10 
                    && anchorId.size() <= 128;
      
      allow update, delete: if isAdmin();
    }

    // ----------------------------------------------------------------------
    // USERS & IDENTITY
    // ----------------------------------------------------------------------
    match /users/{userId} {
      // HARDENED: Users can no longer list all other users.
      allow read: if isOwner(userId) || isAdmin(); 
      
      allow create: if isOwner(userId) && !(request.resource.data.keys().hasAny(['groups']));
      allow update: if isAdmin() || (isOwner(userId) && !(request.resource.data.diff(resource.data).affectedKeys().hasAny(['groups'])));
    }

    // ----------------------------------------------------------------------
    // NEURAL CACHE & LEDGERS
    // ----------------------------------------------------------------------
    match /neural_audio_ledger/{docId} {
      allow read: if true; 
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    match /bible_ledger/{docId} {
      allow read: if true; 
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // ----------------------------------------------------------------------
    // Global Default
    // ----------------------------------------------------------------------
    match /{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}