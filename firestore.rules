rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == 'shengliang.song.ai@gmail.com';
    }

    // ----------------------------------------------------------------------
    // SIGNET IDENTITY REGISTRY (TKS)
    // ----------------------------------------------------------------------
    match /identities/{anchorId} {
      allow read: if true;
      
      // Allow creation of any unique anchor (10-256 chars)
      allow create: if anchorId.size() >= 10 && anchorId.size() <= 256;
      
      // Allow update if:
      // 1. User is the admin
      // 2. User is the current owner
      // 3. User is authenticated and the current owner is 'ANONYMOUS' (Claim Logic)
      allow update: if isAdmin() 
                    || (isAuthenticated() && (resource.data.ownerUid == request.auth.uid || resource.data.ownerUid == 'ANONYMOUS'));
      
      allow delete: if isAdmin();
    }

    // ----------------------------------------------------------------------
    // USERS & IDENTITY
    // ----------------------------------------------------------------------
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin(); 
      allow create: if isOwner(userId);
      allow update: if isAdmin() || isOwner(userId);
    }

    // ----------------------------------------------------------------------
    // NEURAL CACHE & LEDGERS
    // ----------------------------------------------------------------------
    match /neural_audio_ledger/{docId} {
      allow read: if true; 
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    match /bible_ledger/{docId} {
      allow read: if true; 
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // ----------------------------------------------------------------------
    // Global Default (Strict)
    // ----------------------------------------------------------------------
    match /{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}