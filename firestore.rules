rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == 'shengliang.song.ai@gmail.com';
    }

    // ----------------------------------------------------------------------
    // SIGNET IDENTITY REGISTRY (TKS)
    // ----------------------------------------------------------------------
    match /identities/{anchorId} {
      // Single lookups and collection queries are allowed for everyone
      allow read: if true;
      
      // Allow creation ONLY if the anchor does not already exist
      // This prevents the "Insufficient Permissions" error when trying to overwrite someone else
      allow create: if !exists(/databases/$(database)/documents/identities/$(anchorId))
                    && anchorId.size() >= 10 
                    && anchorId.size() <= 256;
      
      // Allow updates only by the owner or an admin
      allow update: if isAdmin() || (isAuthenticated() && resource.data.ownerUid == request.auth.uid);
      
      // Deletions reserved for administration
      allow delete: if isAdmin();
    }

    // ----------------------------------------------------------------------
    // USERS & IDENTITY
    // ----------------------------------------------------------------------
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin(); 
      allow create: if isOwner(userId);
      allow update: if isAdmin() || isOwner(userId);
    }

    // ----------------------------------------------------------------------
    // NEURAL CACHE & LEDGERS
    // ----------------------------------------------------------------------
    match /neural_audio_ledger/{docId} {
      allow read: if true; 
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    match /bible_ledger/{docId} {
      allow read: if true; 
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // ----------------------------------------------------------------------
    // Global Default (Strict)
    // ----------------------------------------------------------------------
    match /{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}